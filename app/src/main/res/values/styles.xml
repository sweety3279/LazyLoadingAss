<resources>

  <!-- Base application theme. -->
  <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:editTextStyle">@style/appEditText</item>
    <item name="android:textColor">@color/theme_text_color</item>
    <item name="android:buttonStyle">@style/appStyleButton</item>
    <item name="android:textViewStyle">@style/appDefaultTextView</item>
    <item name="android:textColorHint">@color/colorPrimary</item>
    <item name="android:colorBackground">@color/md_grey_200</item>
    <item name="colorButtonNormal">@color/colorPrimary</item>
    <item name="android:textAppearanceButton">@style/appStyleButton</item>
  </style>

  <style name="AppTheme" parent="AppThemeBase">
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>

  </style>

  <style name="appStyleButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:background">@drawable/button_theme_style</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingRight">20dp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="appEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">11sp</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textColorHint">@color/colorPrimary</item>
    <item name="android:textColorHighlight">@color/colorPrimary</item>
  </style>

  <style name="appLargeTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">15sp</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

  <style name="appDefaultTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">13sp</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="HeadingTextStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>
    <item name="android:drawablePadding">5dp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="dialogActviity" parent="Base.Theme.AppCompat.Dialog">

    <item name="android:windowIsFloating">true</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowEnterAnimation">@anim/slide_in</item>
    <item name="android:windowExitAnimation">@anim/slide_out</item>

  </style>

  <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>
    <item name="android:textColorPrimary">@color/black</item>
    <item name="android:background">@color/theme_color_cards</item>
  </style>

  <style name="TextEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>
    <item name="android:textSize">15sp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:drawablePadding">8dp</item>
  </style>

  <style name="SCBSwitch" parent="Theme.AppCompat.Light">
    <!-- active thumb & track color (30% transparency) -->
    <item name="colorControlActivated">#46bdbf</item>

    <!-- inactive thumb color -->
    <item name="colorSwitchThumbNormal">#f1f1f1
    </item>

    <!-- inactive track color (30% transparency) -->
    <item name="android:colorForeground">#42221f1f
    </item>
  </style>

  <style name="TextHeading">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:color">#444</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="TextSubHeading">
    <item name="android:layout_width">match_parent</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:typeface">monospace</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="Button_small">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:textColor">@color/white</item>
  </style>


  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


  <style name="paymentCardEditTextNew">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">.5</item>
    <item name="android:inputType">numberDecimal</item>
    <item name="android:fontFamily">@font/halmet_regulat</item>
    <item name="android:text">0</item>
    <item name="android:typeface">monospace</item>
    <item name="android:gravity">right</item>
    <item name="android:textSize">@dimen/_13sdp</item>
    <item name="android:enabled">false</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="SearchViewTheme" parent="Base.Widget.AppCompat.SearchView">
    <item name="android:iconTint">@color/white</item>
    <item name="android:textColorHint">@color/white</item>
    <item name="android:editTextColor">@color/white</item>
  </style>
</resources>
