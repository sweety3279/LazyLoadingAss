<?xml version="1.0" encoding="utf-8"?>
<layout>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_half_vertical_margin"
        android:layout_marginTop="@dimen/activity_half_vertical_margin"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_2sdp"
        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:minHeight="@dimen/_70sdp"
          android:padding="@dimen/activity_half_vertical_margin"
          >

        <TextView
            android:id="@+id/tvErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/theme_color_error_text"
            android:textStyle="bold"
            />
      </RelativeLayout>
    </android.support.v7.widget.CardView>

  </RelativeLayout>
</layout>